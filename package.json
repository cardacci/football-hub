{
	"name": "football-hub",
	"version": "1.0.0",
	"description": "A modern football dashboard featuring real-time standings, fixtures, and league information powered by API-Football",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs",
		"lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs --fix",
		"format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"*.{ts,mjs,json}\" \".prettierrc\"",
		"format:check": "prettier --check \"src/**/*.{ts,tsx,css}\" \"*.{ts,mjs,json}\"",
		"type-check": "tsc --noEmit",
		"validate": "npm run type-check && npm run lint && npm run format:check"
	},
	"dependencies": {
		"next": "16.1.6",
		"react": "19.2.3",
		"react-dom": "19.2.3"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"babel-plugin-react-compiler": "1.0.0",
		"eslint": "^9",
		"eslint-config-next": "16.1.6",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.5",
		"prettier": "^3.8.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tailwindcss": "^4",
		"typescript": "^5"
	}
}
